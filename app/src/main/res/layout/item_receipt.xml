<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/white2grey"
    android:padding="10dp"
    android:id="@+id/item_receipt_layout">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_rc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item_receipt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/text_l2"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/item_receipt_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/text_l2"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/item_receipt_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/text_l2"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>

</LinearLayout>