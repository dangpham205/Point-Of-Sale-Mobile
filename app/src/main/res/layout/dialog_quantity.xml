<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_16"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_yes_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary_radius_top_16"
        android:gravity="center"
        android:padding="14dp"
        android:text="Please Enter Quantity"
        android:textColor="@color/tab_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="8dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/dialog_qtt_minus"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/item_color"
            android:src="@drawable/minus"
            android:visibility="visible"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/dialog_qtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="14dp"
            android:text="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/primary_text2"
            android:textSize="18dp"
            android:background="@drawable/textview_border"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/dialog_qtt_plus"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/item_color"
            android:src="@drawable/ic_add"
            android:visibility="visible" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/dialog_qtt_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_radius_16"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cancel"
            android:textColor="@color/tab_color"
            android:textSize="16sp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/dialog_qtt_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bg_primary_radius_16"
            android:gravity="center"
            android:padding="8dp"
            android:text="Add"
            android:textColor="@color/tab_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>